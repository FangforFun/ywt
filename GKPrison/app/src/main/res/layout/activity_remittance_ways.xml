<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_choose_remittance_way"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bg"
        android:gravity="center_vertical"
        android:textColor="@color/tv_mid"
        android:textSize="16sp"
        android:paddingLeft="10dp"
        android:text="选择汇款方式"/>

    <View
        android:id="@+id/view_01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/et_hint"
        android:layout_below="@id/tv_choose_remittance_way"/>

    <ListView
        android:id="@+id/lv_remittance_way"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:layout_below="@id/view_01"
        android:background="@color/bg"
        android:divider="@color/et_hint"></ListView>

    <View
        android:id="@+id/view_02"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/et_hint"
        android:layout_below="@id/lv_remittance_way"/>

    <Button
        android:id="@+id/bt_next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:text="下一步"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/view_02"
        android:background="@drawable/bt_bg_shape"/>
</RelativeLayout>
