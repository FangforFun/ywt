<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#fff">

    <ImageView
        android:id="@+id/iv_pay_way_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:src="@drawable/pay_way_bank_card"/>

        <TextView
            android:id="@+id/tv_pay_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="支付宝支付"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_pay_way_icon"
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:textColor="@color/tv_bg"/>

    <CheckBox
        android:id="@+id/cb_pay_way"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:button="@null"
        android:checked="true"
        android:focusable="false"
        android:layout_marginRight="10dp"
        android:background="@drawable/cb_selector"
        />
</RelativeLayout>