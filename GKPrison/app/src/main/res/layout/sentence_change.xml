<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
<TextView
    android:id="@+id/tv_sentence_front"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="刑期（减刑前）："
    android:textSize="14sp"
    android:textColor="#333333"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2011年10月10日-2015年11月11日"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_toRightOf="@+id/tv_sentence_front"
        android:layout_alignBaseline="@+id/tv_sentence_front"/>
    <TextView
        android:id="@+id/tv_sentence_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sentence_front"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="#333333"
        android:text="刑期（减刑后）："/>
    <TextView
        android:id="@+id/tv_sentence_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="14sp"
        android:text="2011年10月10日-2015年1月11日"
        android:layout_toRightOf="@+id/tv_sentence_back"
        android:layout_alignBaseline="@+id/tv_sentence_back"/>
    <ListView
        android:id="@+id/lv_sentence_recod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sentence_back"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:divider="@null"></ListView>




</RelativeLayout>