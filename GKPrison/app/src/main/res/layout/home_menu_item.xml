<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_item_height"
    android:background="@drawable/item_selector">

    <ImageView
        android:id="@+id/iv_menu_option"
        android:layout_width="@dimen/menu_item_iv_size"
        android:layout_height="@dimen/menu_item_iv_size"
        android:src="@drawable/user_info"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/tv_menu_option"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/menu_item_height"
        android:text="个人信息"
        android:gravity="center_vertical"
        android:textSize="@dimen/menu_item_tv_size"
        android:textColor="@color/tv_bg"
        android:layout_marginLeft="15dp"/>

</LinearLayout>