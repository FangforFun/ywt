<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <TextView
        android:id="@+id/tv_contact_us"
        android:layout_width="match_parent"
        android:layout_height="@dimen/contact_us_height"
        android:text="联系我们"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textSize="@dimen/goods_car_tv_size"
        android:textColor="@color/theme"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:layout_below="@id/tv_contact_us">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址："
                android:textColor="@color/tv_bg"
                android:textSize="@dimen/goods_car_tv_size"/>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京市海淀区西三旗建材城中路3号程远大厦A座5层"
                android:textColor="@color/tv_bg"
                android:textSize="@dimen/goods_car_tv_size"
                android:lineSpacingExtra="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮编："
                android:textColor="@color/tv_bg"
                android:textSize="@dimen/goods_car_tv_size"/>

            <TextView
                android:id="@+id/tv_zip_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100086"
                android:textColor="@color/tv_bg"
                android:textSize="@dimen/goods_car_tv_size"
                android:lineSpacingExtra="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服电话："
                android:textColor="@color/tv_bg"
                android:textSize="@dimen/goods_car_tv_size"/>

            <TextView
                android:id="@+id/tv_tell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="010-82911287-5032"
                android:textColor="@color/tv_bg"
                android:textSize="@dimen/goods_car_tv_size"
                android:lineSpacingExtra="5dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
