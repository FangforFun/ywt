<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context=".login.PersonLoadingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入个人注册信息"
            android:textSize="14sp"
            android:textColor="@color/tv_mid"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_shape_search"
            android:layout_below="@+id/tv_notice"
            android:hint="姓名"
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:textColor="@color/tv_bg" />
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/et_username"
            android:background="@drawable/et_shape_search"
            android:hint="密码"
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:textColor="@color/tv_bg"/>

        <com.dd.processbutton.iml.ActionProcessButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/theme_bg_bt_selector"
            android:text="登    录"
            android:textColor="@color/white"
            android:layout_below="@id/et_password"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="20sp"
            custom:pb_colorComplete="@color/theme"
            custom:pb_colorNormal="@color/theme"
            custom:pb_colorPressed="@color/half_transparent_theme"
            custom:pb_colorProgress="@color/theme"
            custom:pb_textComplete="Success"
            custom:pb_textProgress="Loading"/>
    </LinearLayout>
</FrameLayout>
