<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@android:color/white" android:layout_width="match_parent"
    android:layout_height="80dp">
    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >
  <ImageView
      android:id="@+id/image_commodity"
      android:layout_width="match_parent"
      android:layout_marginTop="10dp"
      android:scaleType="fitXY"
      android:layout_height="match_parent"
      android:src="@drawable/beizi1"
      />
      <ImageView
          android:id="@+id/image_shopping"
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:background="@drawable/image_bg_shap"
          android:layout_alignParentRight="true"
          android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:layout_weight="2">
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天禧玻璃杯带过滤便携男女士茶杯创意可爱运动情侣透明水杯杯子"/>
        <RatingBar
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            style="@style/roomRatingBar"
            android:numStars="5"
            android:rating="3"
            android:layout_below="@+id/evaluation_nums"/>
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥ 29.8"
            android:layout_gravity="right"/>
    </LinearLayout>

</LinearLayout>