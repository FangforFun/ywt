<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <LinearLayout
        android:id="@+id/ll_home_news"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/view_02"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_home_news_icon"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/img4"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="2.2"
            android:paddingRight="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_home_news_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="昭通市食药监局到昭通监狱开展警示教育"
                android:maxLines="2"
                android:gravity="center_vertical"
                android:textColor="@color/tv_bg"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_home_news_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="    为深入践行“三严三实”和“忠诚干净担当”专题教育实践活动，加强系统党风廉政建设，提高干部拒腐防变能力，党员干部到昭通监狱接手廉政..."
                android:maxLines="4"
                android:textColor="@color/tv_mid"
                android:textSize="14sp"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_home_news_go"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.2"
            android:src="@drawable/toright"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"/>
    </LinearLayout>
</RelativeLayout>