<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.gkzxhn.gkprison.activity.FamilyServiceActivity">
    <RelativeLayout
        android:id="@+id/rl_messge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/tv_prisonnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#333333"
            android:text="囚号："
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_prison_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#333333"
            android:text="2344440001"
            android:layout_alignBaseline="@+id/tv_prisonnum"
            android:layout_toRightOf="@+id/tv_prisonnum"
            />
        <TextView
            android:id="@+id/tv_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#333333"
            android:text="性别："
            android:layout_alignBaseline="@+id/tv_prisonnum"
            android:layout_toRightOf="@+id/tv_prison_num"
            android:layout_marginLeft="50dp"
            />
        <TextView
            android:id="@+id/tv_mail_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_alignBaseline="@+id/tv_prisonnum"
            android:text="男"
            android:layout_toRightOf="@+id/tv_mail"
            />
        <TextView
            android:id="@+id/tv_crime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#333333"
            android:text="犯罪类型:"
            android:layout_below="@+id/tv_prisonnum"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/tv_crime_accent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_crime"
            android:layout_alignBaseline="@+id/tv_crime"
            android:textSize="14sp"
            android:textColor="#333333"
            android:text="抢劫罪"
            />
        <TextView
            android:id="@+id/tv_sentence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_crime"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="#333333"
            android:text="刑期起止:"
            />
        <TextView
            android:id="@+id/tv_sentence_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#333333"
            android:text="2011年10月10日-2016年3月3日"
            android:layout_alignBaseline="@+id/tv_sentence"
            android:layout_toRightOf="@+id/tv_sentence"/>
        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#333333"
            android:text="余额:"
            android:layout_below="@+id/tv_sentence"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tv_balance_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/tv_balance"
            android:layout_alignBaseline="@+id/tv_balance"
            android:textColor="#FF3503"
            android:text="10000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF3503"
            android:textSize="14sp"
            android:text="元"
            android:layout_toRightOf="@+id/tv_balance_money"
            android:layout_alignBaseline="@+id/tv_balance"/>
    </RelativeLayout>
    <ExpandableListView
        android:id="@+id/el_messge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:layout_below="@+id/rl_messge">
    </ExpandableListView>


</RelativeLayout>
