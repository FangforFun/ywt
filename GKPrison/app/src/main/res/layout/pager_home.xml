<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <RelativeLayout
        android:id="@+id/rl_carousel"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_carousel"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:background="#3000">

            <TextView
                android:id="@+id/tv_carousel_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="100dp"
                android:text="我狱杨晓红干警被评为“最美警花”"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:paddingLeft="10dp"/>

            <RadioGroup
                android:id="@+id/rg_carousel"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                >

                <RadioButton
                    android:id="@+id/rb_carousel_01"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_margin="5dp"
                    android:button="@null"
                    android:checked="true"
                    android:enabled="false"
                    android:background="@drawable/rb_selector"
                    />

                <RadioButton
                    android:id="@+id/rb_carousel_02"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_margin="5dp"
                    android:button="@null"
                    android:enabled="false"
                    android:background="@drawable/rb_selector"
                    />

                <RadioButton
                    android:id="@+id/rb_carousel_03"
                    android:layout_width="10dp"
                    android:layout_margin="5dp"
                    android:layout_height="10dp"
                    android:button="@null"
                    android:enabled="false"
                    android:background="@drawable/rb_selector"
                    />
            </RadioGroup>
        </RelativeLayout>
    </RelativeLayout>

    <GridView
        android:id="@+id/gv_home_options"
        android:layout_below="@id/rl_carousel"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:layout_height="250dp"
        android:background="@color/bg"
        android:numColumns="3">
    </GridView>
</RelativeLayout>