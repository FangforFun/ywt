<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <SurfaceView
        android:id="@+id/surfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </SurfaceView>

    <com.gkzxhn.gkprison.zxing.view.ViewfinderView
        android:id="@+id/viewfinderview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000" >
    </com.gkzxhn.gkprison.zxing.view.ViewfinderView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#99000000"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="二维码扫描"
            android:textSize="20sp"
            android:textColor="#fff"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_erweima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:layout_centerHorizontal="true"
        android:text="请扫描您本人的二维码进行登录"
        android:textColor="@android:color/white"
        android:textSize="14sp" >
    </TextView>

    <Button
        android:id="@+id/bt_album_get_barcode"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:textColor="@android:color/white"
        android:background="@drawable/btn_bg_shape"
        android:text="从相册选取二维码"/>

    <Button
        android:id="@+id/bt_no_barcode"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/btn_bg_shape"
        android:text="没有二维码"/>

    <RelativeLayout
        android:id="@+id/rl_scanning"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/half_transparent"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/pb_query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pb_query"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingLeft="15dp"
            android:text="扫描中..."/>
    </RelativeLayout>
</RelativeLayout>