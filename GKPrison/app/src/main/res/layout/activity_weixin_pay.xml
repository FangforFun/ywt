<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userport.activity.WeixinPayActivity">
    <TextView
        android:id="@+id/tv_pay_prison"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="48dp"
        android:textColor="@color/tv_mid"
        android:textSize="@dimen/tv_cancel_size"
        android:text="常德市德山监狱"/>
    <TextView
        android:id="@+id/tv_fenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_pay_prison"
        android:layout_alignBaseline="@+id/tv_pay_prison"
        android:layout_marginTop="25dp"
        android:textColor="@color/tv_mid"
        android:textSize="@dimen/tv_cancel_size"
        android:text="-"/>
    <TextView
        android:id="@+id/tv_transnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_fenge"
        android:layout_alignBaseline="@+id/tv_pay_prison"
        android:layout_marginTop="25dp"
        android:textColor="@color/tv_mid"
        android:textSize="@dimen/tv_cancel_size"
        android:text="434293729477509385895"/>
    <RelativeLayout
        android:id="@+id/rl_weixin_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pay_prison"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp">
        <TextView
            android:id="@+id/tv_pay_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/tv_bg"
            android:text="¥"/>
        <TextView
            android:id="@+id/tv_pay_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_pay_notice"
            android:layout_marginLeft="5dp"
            android:textSize="30sp"
            android:textColor="@color/tv_bg"
            android:text="39.80"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_receviable"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl_weixin_pay"
        android:layout_marginTop="24dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_gray"
            android:textSize="@dimen/ok_cancel_title_size"
            android:text="收款方"
            android:layout_margin="12dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_recevialbe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_bg"
            android:textSize="@dimen/ok_cancel_title_size"
            android:text="常德市德山监狱"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_pay"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_receviable"
        android:layout_marginTop="22dp"
        android:background="#45c01a"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="立即支付"
        android:textSize="@dimen/tv_apply_meeting_call_notice"
        />
</RelativeLayout>
