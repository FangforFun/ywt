<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
       android:id="@+id/ll_serch"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:background="#F0F0F0"
       android:orientation="horizontal">

       <ImageView
           android:layout_width="15dp"
           android:layout_height="18dp"
           android:src="@drawable/clickright"
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="10dp"/>

       <EditText
           android:id="@+id/et_search"
           android:layout_width="0dp"
           android:layout_height="30dp"
           android:layout_weight="1"
           android:hint="搜索"
           android:background="@drawable/et_shape_search"
           android:textColor="#333333"
           android:textSize="14sp"
           android:paddingLeft="5dp"
           android:layout_marginRight="10dp"
           android:layout_marginLeft="10dp"
           android:layout_gravity="center_vertical"/>

       <ImageView
           android:id="@+id/iv_search"
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:src="@drawable/serch"
           android:layout_gravity="center_vertical"
           android:layout_marginRight="10dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/ll_serch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg">
        <TabHost
            android:id="@+id/tab_host"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">
                </TabWidget>
                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:id="@+id/tab1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <FrameLayout
                            android:id="@+id/fl_content_01"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="3dp"
                            android:background="@color/white"></FrameLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/tab2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <FrameLayout
                            android:id="@+id/fl_content_02"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="3dp"
                            android:background="@color/white"></FrameLayout>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/tab3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <FrameLayout
                            android:id="@+id/fl_content_03"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="3dp"
                            android:background="@color/white"></FrameLayout>
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>
        </TabHost>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/image_buycar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/buycar"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/num"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购物车"
                android:textSize="12sp"
                android:textColor="@color/tv_mid"
                android:layout_below="@+id/image_buycar"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计:"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/image_buycar"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="7dp"/>
            <TextView
                android:id="@+id/tv_total_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_total"
                android:text="59.8"
                android:textSize="16sp"
                android:textColor="#FF3503"
                android:layout_toRightOf="@+id/tv_total"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF3503"
            android:textSize="16sp"
            android:text="元"
            android:layout_alignBaseline="@+id/tv_total"
            android:layout_toRightOf="@+id/tv_total_money"/>
        <TextView
            android:id="@+id/tv_total_money_remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(含配送费2元)"
            android:textSize="12sp"
            android:textColor="@color/tv_mid"
            android:layout_below="@+id/tv_total"
            android:layout_toRightOf="@+id/image_buycar"
            android:layout_marginLeft="30dp"/>

        </RelativeLayout>
        <Button
            android:id="@+id/bt_shopping_cart_commit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/orange_bg"
            android:text="结算"
            android:textSize="16sp"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</RelativeLayout>