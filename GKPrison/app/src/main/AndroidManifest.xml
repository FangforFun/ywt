<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gkzxhn.gkprison" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.MainActivity"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.PrisonIntroductionActivity"
            android:label="@string/title_activity_prison_introduction" >
        </activity>
        <activity
            android:name=".activity.LawsRegulationsActivity"
            android:label="@string/title_activity_laws_regulations" >
        </activity>
        <activity
            android:name=".activity.VisitingServiceActivity"
            android:label="@string/title_activity_visiting_service" >
        </activity>
        <activity
            android:name=".activity.PrisonWardenActivity"
            android:label="@string/title_activity_prison_warden" >
        </activity>
        <activity
            android:name=".activity.FamilyServiceActivity"
            android:label="@string/title_activity_family_service" >
        </activity>
        <activity
            android:name=".zxing.CaptureActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="CaptureActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <activity android:name=".activity.PrisonOpenActivity" />
        <activity
            android:name=".activity.RemittanceActivity">
        </activity>
        <activity
            android:name=".activity.ShoppingRecoderActivity" >
        </activity>
        <activity
            android:name=".activity.SplashActivity" >
        </activity>
        <activity android:name=".activity.SettingActivity" />
        <activity android:name=".activity.SystemMessageActivity" />
        <activity android:name=".activity.UserInfoActivity"/>
    </application>

</manifest>
